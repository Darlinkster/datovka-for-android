<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@style/Theme.Sherlock.Light">
        <item name="android:panelFullBackground">@color/abs__background_holo_light</item>
        <item name="android:panelBackground">@color/abs__background_holo_light</item>
        <item name="android:panelTextAppearance">@style/mypaneltextapp</item>
        
    </style>
    
    <style name="mypaneltextapp">
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="CustomCheckbox">
        <item name="android:textColor">@color/dimwhite</item>
    </style>
   
    <style name="MySherlockActionButton">
        <item name="android:gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:minWidth">56dip</item>
    </style>
    
    <style name="msgListItem">
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:background">@drawable/message_item_unread_background</item>
    </style>

    <style name="textAppearanceSmall">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="listItemMainText">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>
    
</resources>