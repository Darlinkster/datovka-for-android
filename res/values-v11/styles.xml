        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@drawable/message_item_unread_background</item>
    </style>
    
    <style name="MySherlockActionButton">
        <item name="android:gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:minWidth">64dip</item>
    </style>
    
    <style name="CustomCheckbox"></style>

    <style name="textAppearanceSmall">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="listItemMainText">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    </style>

