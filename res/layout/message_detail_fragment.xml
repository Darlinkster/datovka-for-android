        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/message_status"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/message_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/message_delivery_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/message_acceptance_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/message_attachment_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="14sp" />

        
        
        
        <TextView
            android:id="@+id/message_sender_recipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/message_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/message_sender_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:textColor="@color/text_link"
            android:clickable="true"
            android:onClick="addressClicked"
            android:textSize="14sp" />
        
        
        
        
        <TextView
            android:id="@+id/sender_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/sender_details"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/message_sender_ref_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/message_sender_ident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:textSize="14sp" />
        
        
        
        <TextView
            android:id="@+id/recipient_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/recipient_details"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/message_recipient_ref_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/message_recipient_ident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:paddingBottom="8dp"
            android:textSize="14sp" />
        
        
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/message_details"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/message_detail_to_hands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/message_detail_legal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/message_detail_personal_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/message_detail_subst_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:paddingBottom="8dp"
            android:textSize="14sp" />
        
    </LinearLayout>

</ScrollView>