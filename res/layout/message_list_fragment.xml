<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/msgListItem"
    android:layout_width="match_parent"
    android:clickable="true"
    android:onClick="itemClicked"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/message_item_annotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        style="@style/listItemMainText"
         />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/message_item_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/message_item_date"
            android:singleLine="true"
            style="@style/textAppearanceSmall"
             />

        <TextView
            android:id="@+id/message_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            style="@style/textAppearanceSmall"
             />
    </RelativeLayout>

</LinearLayout>