<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/msgListItem"
    android:layout_width="match_parent"
    
    android:clickable="true"
    android:onClick="itemClicked"
    android:orientation="vertical" >

    <View
        android:id="@+id/message_item_notification_strip"
        android:layout_width="4dp"
        android:layout_height="fill_parent"
        android:background="#ff0000" />

    <TextView
        android:id="@+id/message_item_annotation"
        style="@style/listItemMainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/message_item_sender"
        style="@style/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/message_item_annotation"
        android:layout_toLeftOf="@+id/message_item_date"
        android:paddingLeft="8dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/message_item_date"
        style="@style/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/message_item_annotation"
        android:singleLine="true" />

</RelativeLayout>