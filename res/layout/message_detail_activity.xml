<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/message_detail_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_attachment_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/message_detail_activity"
        android:layout_above="@+id/download_attachment_button"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/download_attachment_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="onClick"
        android:text="@string/download_attachment_button" />

</RelativeLayout>